---
interface Props {
  labelText: string;
  id: string;
}

const { labelText, id } = Astro.props;
---

<div class="flex flex-col items-center justify-center">
  <label for={id} class="text-lg mb-2 block text-white text-center">
    {labelText}
  </label>
  <select
    id={id}
    class="p-2 text-base rounded cursor-pointer focus:border-blue-500"
  >
    <slot />
  </select>
</div>
